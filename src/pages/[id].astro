---
import Layout from "../layouts/Layout.astro";
import { getBlogDetail, getBlogs } from "../libs/microcms";

export async function getStaticPaths() {
  const response = await getBlogs({ fields: ["id"] });

  return response.contents.map((blog: any) => ({
    params: {
      id: blog.id,
    },
  }));
}

const { id } = Astro.params;
const blog = await getBlogDetail(id as string);
---

<Layout title="Blog Detail">
  <main>
    <h1>{blog.title}</h1>
    <p>公開日時:{new Date(blog.publishedAt).toDateString()}</p>
    <div set:html={blog.content} />
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1em;
    max-width: 60ch;
  }

  p {
    font-size: 14px;
    color: gray;
  }
</style>
